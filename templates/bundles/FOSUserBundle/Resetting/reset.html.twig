{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <h1 class="text-center">{{ 'resetting.reset.submit'|trans }}</h1>

    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form-horizontal fos_user_resetting_reset' } }) }}
    {{ form_widget(form) }}


    <div class="form-group">
        <div class="pull-right">
            <button type="submit" id="_submit" name="_submit" class="btn btn-primary">
                {{ 'form.submit'|trans({}, 'messages') }}
            </button>
        </div>
    </div>


    {{ form_end(form) }}
{% endblock fos_user_content %}
