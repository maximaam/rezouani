{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="text-center">
        <h3>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</h3>

        <br><br>
        <div>
            <a href="{{ path('app_cart_index') }}" class="btn btn-primary">
                <i class="glyphicon glyphicon-shopping-cart"></i>
                {{ 'product.my_cart'|trans({}, 'messages') }}
            </a>

            <a href="{{ path('fos_user_profile_show') }}" class="btn btn-primary">
                <i class="glyphicon glyphicon-user"></i>
                {{ 'user.my_profile'|trans({}, 'messages') }}
            </a>
        </div>
    </div>






{% endblock fos_user_content %}
