{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{ 'security.login.submit'|trans }} - {{ parent() }}
{% endblock %}

{% block fos_user_content %}
    <h1 class="text-center">{{ 'layout.register'|trans }}</h1>

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal fos_user_registration_register'}}) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <hr>

    <div class="row register-address">
        <div class="col-md-6">
            <h3 class="text-center">{{ 'user.address_billing'|trans({}, 'messages') }}</h3>
            {{ form_row(form.address) }}
            {{ form_row(form.zip) }}
            {{ form_row(form.city) }}
            {{ form_row(form.country) }}
        </div>

        <div class="col-md-6">
            <h3 class="text-center">{{ 'user.address_shipping'|trans({}, 'messages') }}</h3>
            {{ form_row(form.addressShipping) }}
            {{ form_row(form.zipShipping) }}
            {{ form_row(form.cityShipping) }}
            {{ form_row(form.countryShipping) }}
        </div>
    </div>

    <div class="form-group">
        <div class="pull-right">
            <button type="submit" id="_submit" name="_submit" class="btn btn-primary">
                <i class="fa fa-user"></i>
                {{ 'registration.submit'|trans }}
            </button>
        </div>
    </div>


    {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}