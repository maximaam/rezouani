{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{ 'security.login.submit'|trans }} - {{ parent() }}
{% endblock %}

{% block fos_user_content %}
    {# include('@FOSUser/Security/login_content.html.twig') #}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="text-center">{{ 'security.login.submit'|trans }}</h1>

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">

        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group">

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                </div>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required">
            </div>

        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-lock"></i></div>
                </div>
                <input type="password" id="password" name="_password" class="form-control" value="{{ last_username }}" placeholder="{{ 'security.login.password'|trans }}" required="required">
            </div>
            <!--
            <small class="pull-right">
                <a href="{{ path('fos_user_resetting_request') }}">
                    {{ 'change_password.submit'|trans }}?
                </a>
            </small>
            -->
        </div>

        <!--
        <div class="form-group">
            <div class="checkbox">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
        -->

        <div class="form-group">

            <div class="pull-right">
                <button type="submit" id="_submit" name="_submit" class="btn btn-primary">
                    <i class="fa fa-sign-in"></i>
                    {{ 'security.login.submit'|trans }}
                </button>
            </div>

            <div class="pull-left">
                <!--
            <a href="{{ path('fos_user_registration_register') }}">
                {{ 'registration.submit'|trans }}
            </a>
            -->
            </div>
        </div>

    </form>

{% endblock %}