        <header class="main-header">
            <nav class="navbar fixed-top navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <img src="{{ asset('images/logo-rezouani.jpg') }}" alt="Rezouani Logo" title="Rezouani import/export" width="50">
                    </a>

                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarCollapse">

                        {{ knp_menu_render('main') }}

                        <div class="user-cart form-inline mt-2 mt-md-0">
                            {% set cartItems = app.session.get('cart')|length %}

                            <!--
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <a href="{{ path('fos_user_profile_show') }}" title="{{ app.user.username }}" class="logged">
                                    <i class="fa fa-user-circle"></i>
                                </a>
                            {% else %}
                                <a href="{{ path('fos_user_security_login') }}" title="{{ 'label.login'|trans }}">
                                    <i class="fa fa-user-circle"></i>
                                </a>
                            {% endif %}
                            -->

                            <!--
                            <div
                                    class="fb-login-button"
                                    data-size="large"
                                    data-button-type="login_with"
                                    data-auto-logout-link="false"
                                    data-use-continue-as="true"
                                    onclick="login()">
                            </div>
                            -->

                            <form class="form-inline mt-2 mt-md-0" method="get" action="{{ path('app_index_search') }}" onsubmit="">
                                <div class="input-group">
                                <input class="form-control py-2 border-right-0 border" type="search" name="query" placeholder="{{ 'label.search'|trans }}" required pattern=".{3,}" title="3 chars minimum" autocomplete="false" value="{{ app.request.get('query') }}">
                                <!--
                                    <span class="input-group-append">
                                    <button class="btn btn-outline-secondary border-left-0 border" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                                -->
                                </div>
                            </form>

                            <ul class="languages">
                                <li>
                                    <a href="/de" class="{{ app.request.locale == 'de' ? 'current' }}" title="Deutsch">
                                        DE
                                    </a>
                                </li>
                                <li>
                                    <a href="/en" class="{{ app.request.locale == 'en' ? 'current' }}" title="English">
                                        EN
                                    </a>
                                </li>
                            </ul>

                            <a href="{{ path('app_cart_index') }}" class="cart" title="{{ 'cart.my-cart'|trans }} {{ cartItems }}">
                                <span {{ cartItems > 0 ? 'class="active"'}}>{{ cartItems }}</span>
                                <i class="fa fa-shopping-basket"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main>
            {% block body %}

            {% endblock %}
        </main>

        <footer class="main-footer text-muted">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        {{ knp_menu_render('footer') }}
                    </div>
                    <div class="col-md-4">
                        <p class="copyright text-white">
                            <small>
                                &copy; {{ "now"|date('Y') }} {{ 'copyright'|trans }}
                            </small>
                        </p>
                    </div>
                    <div class="col-md-4 socials">
                        <a href="https://www.facebook.com/Rezouani-Leder-ImportExport-Berlin-401470737274935/" target="_blank">
                            <i class="fa fa-facebook-official" title="REZOUANI Facebook page"></i>
                        </a>
                        <a href="https://www.facebook.com/Rezouani-Leder-ImportExport-Berlin-401470737274935/" target="_blank">
                            <i class="fa fa-twitter" title="REZOUANI Twitter page"></i>
                        </a>
                    </div>
                </div>
            </div>
        </footer>


