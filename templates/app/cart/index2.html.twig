{% extends 'base.html.twig' %}

{% block body %}
    <!--
        <script src="https://www.paypal.com/sdk/js?client-id=AYP85U056JOOZDT8FhvoIwXAxN9DcpEvL0eNnMfMVbzTJLtK_uwWKtN94Hu2Oj7ish7XHtCfE-2KbQRg&currency=EUR"></script>

    -->
    <script src="https://www.paypal.com/sdk/js?client-id=Ad6WCjJRMUK7XMKUO4VUWKWbJKlZCHI_XwSqpgGYmJlizc2X9l-vsKaZ-aIE4deyPT88nLiZngHZmApE&currency=EUR" data-sdk-integration-source="button-factory"></script>

    <div class="container">
        <div class="row">

        {% if cart is defined and cart|length  %}
            {% set products = cart.products %}
            {% set totals = cart.totals %}

            <div class="table-responsive">
                <h1 class="text-center">{{ 'cart.my-cart'|trans }}</h1>
                <table class="table table-stripped table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'label.title'|trans }}</th>
                            <th>{{ 'label.product-number'|trans }}</th>
                            <th>{{ 'label.color'|trans }}</th>
                            <th>{{ 'label.size'|trans }}</th>
                            <th>{{ 'label.quantity'|trans }}</th>
                            <th>{{ 'label.price-unit'|trans }}</th>
                            <th>{{ 'label.price-total'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for id, product in products %}
                            <tr>
                                <td>{{ product.title }}</td>
                                <td>{{ product.productNumber }}</td>
                                <td>{{ product.color|trans }}</td>
                                <td>{{ product.size|length > 0 ? product.size : '-' }}</td>
                                <td>{{ product.quantity }}</td>
                                <td>{{ product.price|number_format(2, ',', '.') }} <i class="fa fa-eur"></i></td>
                                <td>{{ product.fullPrice|number_format(2, ',', '.') }} <i class="fa fa-eur"></i></td>
                                <td>
                                    <div class="pull-right">

                                        <a href="{{ path('app_cart_remove', {'id': id}) }}" title="{{ 'form.delete'|trans }}" rel="nofollow" class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                        <tfoot>
                            <tr>
                                <td colspan="5"></td>
                                <td class="font-weight-bold">{{ 'label.total-excl-tax'|trans }}</td>
                                <td>{{ totals.excl_tax|number_format(2, ',', '.') }} <i class="fa fa-eur"></i></td>
                            </tr>
                            <tr>
                                <td colspan="5"></td>
                                <td class="font-weight-bold">{{ 'label.vat'|trans }}</td>
                                <td>{{ totals.vat|number_format(2, ',', '.') }} <i class="fa fa-eur"></i></td>
                            </tr>
                            <tr>
                                <td colspan="5"></td>
                                <td class="font-weight-bold">{{ 'label.total-incl-tax'|trans }}</td>
                                <td>{{ totals.total|number_format(2, ',', '.') }} <i class="fa fa-eur"></i></td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="#">
                                        <i class="fa fa-tag"></i>
                                        {{ 'cart.continue-shopping'|trans }}
                                    </a>
                                </td>
                                <td colspan="6" class="text-right">
                                    <!--
                                    <div id="paypal-button-container"></div>
                                    <script>
                                        paypal.Buttons({
                                            createOrder: function(data, actions) {
                                                // This function sets up the details of the transaction, including the amount and line item details.
                                                return actions.order.create({
                                                    purchase_units: [{
                                                        amount: {
                                                            value: '0.01'
                                                        }
                                                    }]
                                                });
                                            }
                                            }).render('#paypal-button-container');
                                        // This function displays Smart Payment Buttons on your web page.
                                    </script>
                                    -->

                                    <div id="smart-button-container">
                                        <div style="text-align: center;">
                                            <div id="paypal-button-container"></div>
                                        </div>
                                    </div>

                                    <script>
                                        function initPayPalButton() {
                                            paypal.Buttons({
                                                style: {
                                                    shape: 'rect',
                                                    color: 'gold',
                                                    layout: 'horizontal',
                                                    label: 'buynow',
                                                },

                                                createOrder: function(data, actions) {
                                                    return actions.order.create({
                                                        purchase_units: [{
                                                                "description":"blabla item",
                                                                "amount":{
                                                                    "currency_code":"EUR",
                                                                    "value":100
                                                                },
                                                                "items": [
                                                                    {
                                                                        "name": "T-Shirt",
                                                                        "description": "Green XL",
                                                                        "sku": "sku01",
                                                                        "unit_amount": {
                                                                            "currency_code": "EUR",
                                                                            "value": "90.00"
                                                                        },
                                                                        "quantity": "1",
                                                                        "category": "PHYSICAL_GOODS"
                                                                    },
                                                                    {
                                                                        "name": "Shoes",
                                                                        "description": "Running, Size 10.5",
                                                                        "sku": "sku02",
                                                                        "unit_amount": {
                                                                            "currency_code": "EUR",
                                                                            "value": "5.00"
                                                                        },
                                                                        "quantity": "2",
                                                                        "category": "PHYSICAL_GOODS"
                                                                    }
                                                                ]
                                                            }]
                                                    });
                                                },

                                                onApprove: function(data, actions) {
                                                    return actions.order.capture().then(function(details) {
                                                        alert('Transaction completed by ' + details.payer.name.given_name + '!');
                                                    });
                                                },

                                                onError: function(err) {
                                                    console.log(err);
                                                }
                                            }).render('#paypal-button-container');
                                        }
                                        initPayPalButton();
                                    </script>
                                </td>
                            </tr>
                        </tfoot>

                    </table>

                {{ include('app/partials/payment-short.html.twig', {locale: app.request.locale}) }}
                </div>

            {% else %}

                <div class="alert alert-warning">
                    <span class="fa fa-flag"></span>
                    {{ 'cart.empty'|trans }}
                </div>

            {% endif %}

        </div>
    </div>

{% endblock %}