{% extends 'base.html.twig' %}

{% block body %}

    {% set products = cart.products %}
    {% set totals = cart.totals %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <h1 class="text-center">{{ 'ordering.my'|trans }}</h1>
            <hr>
            <ul class="list-unstyled">
                {% for id, product in products %}
                    <li>{{ product.title }} | {{ product.fullPrice|number_format(2, ',', '.') }} <i class="glyphicon glyphicon-eur"></i></li>
                {% endfor %}
            </ul>

            <hr>
            <div class="text-right">
                <dl class="dl-horizontal">
                    <dt>Total HT</dt>
                    <dd>{{ totals.excl_tax|number_format(2, ',', '.') }} <i class="glyphicon glyphicon-eur"></i></dd>
                    <dt>TVA (20%)</dt>
                    <dd>{{ totals.vat|number_format(2, ',', '.') }} <i class="glyphicon glyphicon-eur"></i></dd>
                    <dt>Total TTC</dt>
                    <dd>{{ totals.total|number_format(2, ',', '.') }} <i class="glyphicon glyphicon-eur"></i></dd>
                </dl>

                <hr>
                <a href="{{ payment_url }}"><img src="{{ asset('images/paypal-btn.png') }}"></a>
            </div>

        </div>
        <div class="col-md-3"></div>
    </div>



{% endblock %}