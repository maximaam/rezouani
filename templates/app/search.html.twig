{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
                <div class="col-md-12">
                    {% if products|length == 0 %}
                        <div class="alert alert-warning">
                            {{ 'msg.no_search_result'|trans({'%query%': query}) }}
                        </div>

                    {% else %}

                    <div class="row">
                        {% for product in products %}
                            {% include 'app/partials/item.html.twig' with {product: product} %}
                        {% endfor %}
                    </div>

                    {% endif %}
                </div>

        </div>
    </div>
{% endblock %}